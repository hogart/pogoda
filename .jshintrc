{
  // Enforcing options
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 4,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": "single",
  "undef": true,
  "unused": true,
  "trailing": true,
  "maxdepth": 3,
  "maxstatements": 15,
  "maxcomplexity": 11,
  // Relaxing options
  "boss": true,
  "eqnull": true,
  "expr": true,
  "lastsemic": true,
  "sub": true,
  // Environments
  "maxerr": 5,
  //  "browser": true,
  "node": true,
  "globals": {
    /* mocha */
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false
  }
}